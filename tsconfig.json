{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "types": ["@playwright/test", "node"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["tests/**/*.ts", "pages/**/*.ts", "helpers/**/*.ts"],
  "exclude": ["node_modules"]
}
